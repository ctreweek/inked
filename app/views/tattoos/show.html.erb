
<div class="container-postion-relative">
  <div>
    <%= link_to artist_path(@tattoo.artist) do %>
      <%= image_tag @tattoo.url, class: "tattoo-show-photo" %>
    <% end %>
  </div>
  <div class="tat-show-artist-info">
    <div>
      <%= link_to artist_path(@tattoo.artist) do  %>
      <%= image_tag @tattoo.artist.avatar, class: "artist-avatar-small"%>
      <% end %>
    </div>
    <div class="artist-name">
      <%= link_to @tattoo.artist.name, artist_path(@tattoo.artist) %>
    </div>
      </div>


      <div id="comment-box">
        <i class="fa fa-comment-o fa-2x" aria-hidden="true"></i>
        <%= simple_form_for [@tattoo.artist, @tattoo, @comment] do |f| %>
        <%= f.input :rollout_id, :label => false, wrapper_html: {class: "form-inline"} do %>
        <%= f.input :comment, inline_label: "", label: false %>
        <%= f.button :submit, "submit", class: "btn-primary" %>
        <% end %>
        <% end %>
      </div>
        <% if @tattoo.comments %>
        <div id="comments">
        <% @tattoo.comments.each do |comment| %>
          <ul style="list-style:none" class="list-inline">
            <% if comment.user %>
              <li class="comment-user"><b><%= comment.user.name %></b></li>
            <% end %>
            <li><%=comment.comment %></li>
          </ul>
        <% end %>
        </div>
      <% end %>


  </div>
</div>
