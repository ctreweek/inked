<div class="banner text-center">
  <h1>Get inked by top local artists</h1>

  <%= form_tag "/artists", method: "get" do |f| %>
  <%= select_tag "city", options_for_select(cities) %>
  <%= submit_tag "Discover Art", class: 'btn-landing ' %>

  <% end %>

  <%= link_to "Browse work", artists_path %><br>
  <%= link_to "User sign in", new_user_session_path %> | <%= link_to "User sign up", new_user_registration_path %><br>
  <%= link_to "Artist sign in", new_artist_session_path %> | <%= link_to "Artist sign up", new_artist_registration_path %>
</div>
