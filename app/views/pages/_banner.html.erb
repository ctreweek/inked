<div class="banner text-center">
  <h1>Inkd.</h1>
  <h3>Connect with top local tattoo artists</h3>

  <%= form_tag "/artists", method: "get" do |f| %>
  <%= select_tag "city", options_for_select(cities) %>
  <%= submit_tag "Discover Art", class: 'btn-primary ' %>

  <% end %>
  <div class="call-to-action-user">
    <%= link_to "User sign in", new_user_session_path %> | <%= link_to "User sign up", new_user_registration_path %>
  </div>
  <div class="call-to-action-artist">
    <%= link_to "Artist sign in", new_artist_session_path %> | <%= link_to "Artist sign up", new_artist_registration_path %>
  </div>
</div>
